{
  "id": null,
  "uid": "audit-metrics",
  "title": "Audit API Metrics",
  "tags": ["crypto", "audit"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Audit Request Rate (per minute)",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "60 * sum by (symbol) (rate(audit_price_count_total[1m]))",
          "legendFormat": "{{symbol}}",
          "refId": "A"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "timeseries",
      "title": "Audit Latency p95 (seconds)",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, symbol) (rate(audit_price_latency_seconds_bucket[5m])))",
          "legendFormat": "{{symbol}}",
          "refId": "B"
        }
      ],
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "timeseries",
      "title": "Audit Average Latency (seconds)",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "sum by (symbol) (rate(audit_price_latency_seconds_sum[5m])) / sum by (symbol) (rate(audit_price_latency_seconds_count[5m]))",
          "legendFormat": "{{symbol}}",
          "refId": "C"
        }
      ],
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8}
    }
  ]
}
